FROM python:3.11-slim

# ─── Python-зависимости ─────────────────────────────────────────────
COPY requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt

# ─── копируем исходники ─────────────────────────────────────────────
WORKDIR /src
COPY . .

ENV PYTHONUNBUFFERED=1
CMD ["python", "-m", "src.test_cap"]
